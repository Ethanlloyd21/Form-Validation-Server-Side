<div class="container login-container">
    <div class="row">
        <div class="col-md-6 login-form-1">
            <h3>Login Form</h3>
            <form action="/login" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Your Email *" value="" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Your Password *" value="" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="Login" />
                </div>
                <div class="form-group">
                    <a href="#" class="ForgetPwd">Forget Password?</a>
                </div>
                <div class="form-group">
                    Not a member yet? <a href="#" class="ForgetPwd">Sign up</a>
                </div>
            </form>
        </div>
        <div class="col-md-6 login-form-2">
            <h3>Create User Form</h3>
            <form action="/login" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Enter your Email *" value="" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Enter a Password *" value="" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Confirm your Password *" value="" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit" action="/login" value="Create" />
                </div>
                <div class="form-group">

                    <a href="#" class="ForgetPwd" value="Login">Forget Password?</a>
                </div>
            </form>
        </div>
    </div>
</div>